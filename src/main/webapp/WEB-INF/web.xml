<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>loginServlet</servlet-name>
  	<description></description>
  	<servlet-class>com.shivam.servlets.loginServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>profilePageServlet</servlet-name>
  	<servlet-class>com.shivam.servlets.profilePageServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>loginServlet</servlet-name>
  	<url-pattern>/loginServletPath</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>profilePageServlet</servlet-name>
  	<url-pattern>/profilePageServlet</url-pattern>
  </servlet-mapping>
</web-app>
